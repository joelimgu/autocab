<?xml version="1.0"?>
<robot name="car" xmlns:xacro="http://ros.org/wiki/xacro">

	<xacro:property name="base_width" value="0.47"/>
	<xacro:property name="base_length" value="1.05"/>
	<xacro:property name="base_height" value="0.3"/>
	<xacro:property name="wheel_radius" value="0.10"/>
	<xacro:property name="wheel_width" value="0.085"/>


	<link name="base_link">
		<visual>
			<geometry>
				<box size="${base_length} ${base_width} ${base_height}" />
			</geometry>
			<material name="black">
				<color rgba="0.0 0.0 0.0 1.0" />
			</material>
		</visual>
	</link>

        <link name="chassis_lidar">
                <visual>
			<origin xyz="0 0 0" rpy="0 0 0" />
                        <geometry>
                                <box size="0.008 0.118 0.1"/>
                        </geometry>
                        <material name="random">
                                <color rgba="1.0 1.0 0.0 1.0"/>
                        </material>
                </visual>
        </link>


        <joint name="chassis_lidar_joint" type="fixed">
		<parent link="base_link" />
		<child link="chassis_lidar" />
		<origin xyz="-0.35 0 0.20" rpy="0 0 0"/>
	</joint>


        <link name="base_lidar">
                <visual>
			<origin xyz="0 0 0" rpy="0 0 0" />
                        <geometry>
                                <box size="0.08 0.118 0.008"/>
                        </geometry>
                        <material name="random">
                                <color rgba="1.0 1.0 0.0 1.0"/>
                        </material>
                </visual>
        </link>


        <joint name="base_lidar_joint" type="fixed">
                <parent link="chassis_lidar" />
                <child link="base_lidar" />
                <origin xyz="-0.04 0 0.05" rpy="0 0 0"/>
        </joint>



	<link name="laser">
		<visual>
			<origin xyz="0 0 0" rpy="0 0 ${pi}" />
			<geometry>
				<cylinder radius="0.035" length="0.041"/>
			</geometry>
			<material name="lidar">
				<color rgba="1.0 0.0 1.0 1.0"/>
			</material>
		</visual>
	</link>	

	<link name="base_footprint">
		<visual>
			<geometry>
				<cylinder radius="0.035" length="0.041"/>
			</geometry>
			<material name="odom">
				<color rgba="1.0 0.0 1.0 1.0"/>
			</material>
		</visual>
	</link>	
	
  <joint name="lidar_joint" type="fixed">
    <parent link="base_lidar"/>
    <child link="laser"/>
    <origin xyz="0 0 0.0205" rpy="0 0 ${pi/2}"/>
  </joint>
  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>
</robot>
